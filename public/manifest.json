{
  "manifest_version": 3,
  "name": "Swades Connect",
  "version": "1.0.0",
  "description": "A Chrome extension that extracts Contacts, Opportunities, and Activities from Odoo CRM. Features automatic data extraction, local storage, search/filter capabilities, and CSV export functionality.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.odoo.com/*",
    "file://*/*"
  ],
  "action": {
    "default_title": "Swades Connect",
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts"
  },
  "content_scripts": [
    {
      "matches": ["https://*.odoo.com/*", "file://*/*"],
      "js": ["src/content/index.ts"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["rpc-interceptor.js"],
      "matches": ["https://*.odoo.com/*"]
    }
  ]
}
