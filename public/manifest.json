{
  "manifest_version": 3,
  "name": "Swades Connect - Odoo CRM Extractor",
  "version": "0.1.0",
  "description": "Extract Contacts, Opportunities, and Activities from Odoo CRM",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.odoo.com/*"
  ],
  "action": {
    "default_title": "Swades Connect",
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts"
  },
  "content_scripts": [
    {
      "matches": ["*://*.odoo.com/*"],
      "js": ["src/content/index.ts"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
